<!-- custom_box_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081"/> <!-- Pink color for selected state -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- White color for stroke in selected state -->
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray color for default state -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#757575"/> <!-- Dark gray color for stroke in default state -->
        </shape>
    </item>
</selector>
